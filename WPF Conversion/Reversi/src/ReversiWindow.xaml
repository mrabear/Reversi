<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Reversi" x:Name="Reversi_Window" x:Class="Reversi.ReversiWindow"
        Title="Reversi" Height="800" Width="735" ResizeMode="CanMinimize" Icon="/Reversi;component/ReversiIcon.ico" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="/Reversi;component/img/FormBackground.png" Stretch="None"/>
    </Window.Background>
    <Window.Foreground>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Window.Foreground>
    <Canvas x:Name="ClickSurface" HorizontalAlignment="Left" Height="660" VerticalAlignment="Top" Width="660" MouseDown="PlaceUserPiece" Background="#00000000" Cursor="Hand" Margin="30,80,0,0">
        <local:GameBoard x:Name="GameBoardSurface" Height="640" Width="640" Margin="10,10,10,10"/>
    </Canvas>
</Window>
