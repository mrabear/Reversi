<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Reversi" x:Name="Reversi_Window" x:Class="Reversi.ReversiWindow"
        Title="Reversi" Height="800" Width="735" ResizeMode="CanMinimize" Icon="/Reversi;component/ReversiIcon.ico" WindowStartupLocation="CenterScreen" MouseDown="Reversi_Window_MouseDown">
    <Window.Background>
        <ImageBrush ImageSource="/Reversi;component/img/FormBackground.png" Stretch="None"/>
    </Window.Background>
    <Window.Foreground>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Window.Foreground>
    <local:GameBoard x:Name="GameBoardSurface" Height="640" Width="640" Margin="45,95,44,37" MouseDown="GameBoardSurface_MouseDown" Cursor="Hand" OpacityMask="#00000000"/>
</Window>
